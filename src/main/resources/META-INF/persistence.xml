<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.1">

    <persistence-unit name="monitoriaPU">
        <class>model.Aluno</class>
        <class>model.Coordenador</class>
        <class>model.Edital</class>
        <class>model.Disciplina</class>
        <class>model.Inscricao</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:monitoria.db"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>

            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>